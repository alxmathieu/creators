<div class="container">
  <div class="header-search text-center">
      <h1> -  This is where you can browse all creators 👀 - </h1>
  </div>


  <div class="search-form" >
    <%= form_tag search_path, method: :get do %>
      <div class="input-group">
      <%= text_field_tag :name,
        params[:name],
        class: "form-control",
        placeholder: "Happy browsing 🔍"
      %>



        <span class="input-group-btn">
          <%= button_tag "Search", class: "btn btn-primary" %>
        </span>
      </div>
  </div>


  <div class="wrapper-search">
    <div class="side-wrapper">
      <div class="sticky">
      <div class="filters-card card">

        <div class="select-tags">
          <h3> - Categories</h3>
          <%= select_tag :categories, options_from_collection_for_select(@categories, :id, :name, params[:categories]), include_blank: true, prompt: "Select something", class: "select2 select2form-index", multiple: true%>
        </div>

        <div class="select-tags">
          <h3> - Languages </h3>
          <%#= collection_select %>
          <%= select_tag :languages, options_for_select(@languages, params[:languages]), include_blank: true, class: "select2lang select2form-index", multiple: true %>
        </div>

        <div class="select-tags">
          <h3> - Batch </h3>
          <%= select_tag :batch, options_from_collection_for_select(@batches, :id, :number, params[:batch]), include_blank: true, class: "select2batches select2form-index", multiple: true %>
        </div>

        <div class= "select-tags text-center">
          <br>
          <span class="input-group-btn">
            <%= button_tag "Filter", class: "btn btn-primary" %>
          </span>
        </div>

      </div>

      <div class="level-card card text-center">
        <p> You're currently <span class="lever-user-typo"> <%= current_user.level_name %> </span>! Want to pass level ?</p>
        <span class="btn btn-charcoal-creator">
          <%= link_to "How to do it ?", user_path(current_user) %>
        </span>
        </div>
      </div>
    </div>

    <% end %>

      <div class="content-search">
          <div class="container-rankings card" id="ranking-search">
            <div class="current-batch">
              <ul class="list-unstyled">
                <% if @creators.empty? %>
                  <%= render 'shared/result-search-nil-creators'%>
                <% else %>
                  <% @creators.each do |creator| %>
                     <%= render 'shared/creator', creator: creator %>
                  <% end %>
                  <%= render 'shared/result-search-nil-creators'%>
                <% end %>
              </ul>
            </div>
          </div>
      </div>
  </div>

</div>


