<div class="container">
  <div class="text-center">
      <h1> -  This is where you can browse all creators 👀 - </h1>
  </div>


  <div class="search-form" >
    <%= form_tag search_path, method: :get do %>
      <div class="input-group">
      <%= text_field_tag :name,
        params[:name],
        class: "form-control",
        placeholder: "Happy browsing 🎉🔍"
      %>

        <span class="input-group-btn">
          <input class="btn btn-primary" type="submit" id="btn-home-search" >Cliiiiick</input>
        </span>
      </div>
  </div>




  <div class="wrapper-search">
    <div class="filters-card card">

      <h3> - Categories</h3>
      <div class="card">
        <%= text_field_tag :categories,
          params[:categories],
          class: "form-control",
          placeholder: "Insert cat"
        %>
      </div>

      <h3> - Languages </h3>
      <div class="card">
        <%#= collection_select %>
      </div>

      <h3> - Batch </h3>
      <div class="card">
        <%= select_tag :batch,
          params[:batch],
          class: "form-control",
          placeholder: "Choose Batch"
        %>
      </div>
    </div>

    <% end %>

      <div class="content-search">
          <div class="container-rankings card" id="ranking-search">
            <div class="current-batch">
              <ul class="list-unstyled">
                <% @creators.each do |creator| %>
                   <%= render 'shared/creator', creator: creator %>
                <% end %>
              </ul>
            </div>
          </div>
      </div>
  </div>

</div>


