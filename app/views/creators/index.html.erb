<div class="container">
  <div class="text-center">
      <h1> -  This is where you can browse all creators ðŸ‘€ - </h1>
  </div>


  <div class="search-form" >
    <%= form_tag search_path, method: :get do %>
      <div class="input-group">
      <%= text_field_tag :name,
        params[:name],
        class: "form-control",
        placeholder: "Happy browsing ðŸŽ‰ðŸ”"
      %>

        <span class="input-group-btn">
          <input class="btn btn-primary" type="submit" id="btn-home-search" >Cliiiiick</input>
        </span>
      </div>
  </div>


  <div class="wrapper-search">
    <div class="filters-card card">

      <h3> - Categories</h3>
      <div class="card">
        <%= select_tag :categories, options_from_collection_for_select(@categories, :id, :name, params[:categories]), include_blank: true %>
      </div>

      <h3> - Languages </h3>
      <div class="card">
        <%#= collection_select %>
        <%= select_tag :languages, options_for_select(@languages, params[:languages]), include_blank: true %>
      </div>

      <h3> - Batch </h3>
      <div class="card">
        <%= select_tag :batch, options_from_collection_for_select(@batches, :id, :number, params[:batch]), include_blank: true %>
      </div>
    </div>

    <% end %>

      <div class="content-search">
          <div class="container-rankings card" id="ranking-search">
            <div class="current-batch">
              <ul class="list-unstyled">
                <% @creators.each do |creator| %>
                   <%= render 'shared/creator', creator: creator %>
                <% end %>
              </ul>
            </div>
          </div>
      </div>
  </div>

</div>


