<div class="show-card" >

  <!-- <div class="back-btn">
    <%= link_to '', root_path(@creator), class: "fas fa-arrow-left" %>
  </div> -->
  <div class="creator">
    <%= cl_image_tag @creator.avatar_photo, class: "avatar-large"%>
     <%= link_to @creator.youtube_name , creator_path(@creator), class: "showcased-name" %>
  </div>
  <div class="upvotes-content">
    <div>
      <%= render 'shared/upvote-button', :creator => @creator %>
    </div>
  </div>
  <div class="wrapper">
    <div class="back-show ">
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">


      <div class="card description-video card-gold">
        <div class="card description">
          <div class= "quote" style=" font-size: 25px">
            <i class="fas fa-quote-left"></i>    <%= @creator.description %>    <i class="fas fa-quote-right"></i>
          </div>
          <div class="discovered-by">
            <p> discovered by <%= @creator.user.username %> <%= cl_image_tag @creator.user.avatar, class: "avatar" %></p>
          </div>
        </div>
        <div class="videoWrapper">
          <iframe class="ytplayer-showcased" type="text/html"
          src="https://www.youtube.com/embed/<%= @creator.video_youtube_id %>?autoplay=0"
          frameborder="0" width="100%" heigth= "100%" >
          </iframe>
          <div class="btn-more">
          <%= link_to "More on Youtube...", @creator.channel_url, :target => "_blank" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-4">
      <div class="card info card-charcoal">
        <div class="tags info">
          <p class="subtitle-info"><strong>Tags</strong></p>
          <% @creator.tag_list.each do |tag| %>
            <ul>
              <%= tag %>
            </ul>
          <% end %>
        </div>
        <div class="followers info">
          <p class="subtitle-info"><strong>Followers on Youtube</strong></p>
          <ul><%= "#{@creator.nb_followers/1000}" %> K</ul>
          <ul><%#= @creator.nb_video %> Vid√©os</ul>
        </div>
        <div class="social info">
          <p class="subtitle-info"><strong>Social</strong></p>
          <ul><i class="fab fa-instagram"></i> Instagram</ul>
          <ul><i class="fab fa-facebook-square"></i> Faceboof</ul>
          <ul><i class="fab fa-twitter-square"></i> Twitter</ul>
          <div class="btn-subscribe ">
            <!-- <ul class="g-ytsubscribe" data-channelid="UChH5L8Od81YohhlVWGdDyQg" data-count="hidden" target="_blank"></ul> -->
            <ul class="g-ytsubscribe" data-channelid= <%= @creator.channel_id %> data-count="hidden", target="_blank"></ul>
            <!-- TO DO a remplacer par la ligne:
            quand la channel id sera disponible et faire css -->
          </div>
        </div>
      </div>
    </div>


  </div>
</div>














