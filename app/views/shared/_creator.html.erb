<li class="card-creator">
  <div class="creator-info">
    <div class="card-avatar">
      <%= link_to(creator_path(creator)) do %>
        <%= cl_image_tag creator.avatar_photo, class: "avatar-creator"%>
      <% end %>
        </div>
        <div class="card-content">
          <div class="creator-name">
            <%= link_to creator.youtube_name, link_to(creator_path(creator)), class: "creator-name" %>
          </div>
          <div class="card-sub-content">
            <div class="creator-tags">
              <ul class="list-unstyled creator-tags">
                <% creator.tag_list.first(3).each do |tag| %>
                  <li>
                    <% if tag.length < 13 %>
                      <%= "##{tag.capitalize}" %>
                    <% else %>
                      <%= "##{tag.capitalize.first(13)}" %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="creator-description">
              <%= creator.description.first(100) %>...
            </div>
          </div>
        </div>
      </div>
  <div class="card-upvote btn " id="upvote-btn-creator-<%= creator.id %>" >
    <%= render 'shared/upvote-button', creator: creator %>
  </div>
</li>
