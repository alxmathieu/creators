<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6 text-center">
      <h1> Add your creator for the next batch</h1>
      <%= simple_form_for @creator, url: create_creators_path do |f| %>
        <!-- [...] -->
        <div class="form-inputs">
          <%= f.input :channel_url%>
          <%= f.input :youtube_name%>
          <%= f.input :description, hint: "Write your reviews about this creator"%>
          <%= f.input :video_url%>
          <%= f.input :nb_followers%>
          <%= f.input :language, class: " bfh-languages"%>
          <%= f.input :country %>
          <%= f.input :tag_list, hint: "Add several tags separated with commas",  value: f.object.tag_list.to_s %>
        </div>
        <!-- [...] -->
         <div class="form-actions">
          <%= f.submit "Add a Creator", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
