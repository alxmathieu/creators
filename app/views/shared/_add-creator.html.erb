<div class="container">
  <div class="show-form">
    <% if @youtube_data.nil? %>
      <div class="text-center">
        <h1>
          Sorry, we couldn't find your creator. Please verify the URL and try again!
        </h1>
        <hr>
        <div class="btn btn-primary btn-lg btn-submit-home">
          <%= link_to "Add a new creator", "#creator-modal", "data-toggle" => "modal", class: '' %>
          <%= render 'shared/modal_creator' %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-xs-6 text-center">
          <h1> Waouw, we found your creator! ðŸŽ‰ðŸŽ‰ðŸŽ‰</h1>

          <div class="card card-showcased" id="show-form-card">
            <div id="avatar-name-div">
            <%= cl_image_tag @youtube_data[:remote_avatar_photo_url], class: "avatar-showcased-creator" %>
            </div>
            <h3 class="showcased-name"> <%=@creator.youtube_name %></h3>
            <div class="creator-stats">
                <div>
                  <span><strong><%= @creator.nb_followers / 1000 %>k</strong></span>
                  <p>Followers</p>
                </div>
                <div>
                  <span><strong><%= @youtube_data[:nb_videos] %></strong></span>
                  <p>Videos</p>
                </div>
                <div>
                  <span><strong><%= @youtube_data[:view_count].to_i / 1000 %>k</strong></span>
                  <p>Views</p>
                </div>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-xs-6">
          <h2 class="text-center">1. Add some information to your review</h2>
          <div class="card form-card">

            <%= simple_form_for @creator, url: create_creators_path do |f| %>
              <!-- [...] -->
              <div class="form-inputs">
                <%= f.input :description, label: "Write the review about #{@creator.youtube_name}, explain what makes you vibrate..."%>
                <div class="form-group">
                  <%= label_tag :tags, "Add a few tag applying to #{@creator.youtube_name}" %>
                  <%= select_tag :tags, options_from_collection_for_select(
                      @categories, 'id', 'name'), class: 'select2-tags', id: "input-tags-multiple", multiple: true, style:"width: 100%; font-size: 16px" %>
                </div>

                <%#= select_tag :language, options_from_collection_for_select(
                    @categories, 'id', 'name'), class: 'select2-tags', id: "input-tags-multiple", multiple: true, style:"width: 100%; font-size: 16px" %>


                <%= label_tag :language, "Main Language of #{@creator.youtube_name}" %>
                <%= select_tag :language, options_for_select(["French", "Espagnol", "English", "German", "None"]), class: "select2lang", multiple: true, style:"width: 100%; font-size: 16px" %>


                <%#= f.input :language, collections: ["French", "Espagnol", "English", "Deutsh"], label: "Language of the channel", class: "select2-tags", multiple: true %>

                <!-- [Hidden-Fields] -->
                <%= f.hidden_field :channel_url %>
                <%= f.hidden_field :channel_id %>
                <%= f.hidden_field :nb_videos %>
                <%= f.hidden_field :youtube_name %>
                <%= f.hidden_field :remote_avatar_photo_url %>
                <%= f.hidden_field :nb_followers %>
                <%= f.hidden_field :country %>
                <%#= f.hidden_field :language, class: " bfh-languages"%>
             </div>
          </div>
        </div>
      </div> <!-- Fin de la first row -->

        <h2 class="text-center">2. Pick a video that embodies <%= @creator.youtube_name%> the most  </h2>
          <div class="wrapper-videos">
              <% @youtube_data[:top_videos].each do |id| %>
                  <div class="video-card text-center">
                    <iframe class="ytplayer-showcased" type="text/html" id="<%= id %>{"
                         src="https://www.youtube.com/embed/<%= id %>?autoplay=0"
                         frameborder="0" height="150px" width="225px"> </iframe>
                    <%= link_to "I want this one ðŸ‘†", "#", class: "add-video-btn btn", id: id %>
                  </div>
              <% end %>
          </div>
          <%= f.hidden_field :video_url, label: "Pick a video that embodies the most #{@creator.youtube_name}", id: "video-form" %>
          <div class="form-actions text-center">
            <%= f.submit "Add #{@creator.youtube_name} to the game!", class: "btn btn-primary", id:"submit-creator-btn" %>
          </div>

      <% end %> <!-- end of the simple form -->
      </div>
      <% end %> <!-- end of if youtubeData nil -->
  </div>
</div>
